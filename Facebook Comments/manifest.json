{
  "manifest_version": 2,

  "name": "Facebook Comments Plugin",
  "description": "This extension will allow you to set the default display order for Facebook comments",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_Scripts" : [ {
	"js": ["jquery.min.js", "popup.js"],
	"matches": [ "http://*/*", "https://*/*" ]
  } ],
  "permissions": [
   "activeTab"
   ]
}